@{
    Layout = "_AdminPage";
    ViewData["Title"] = "Rooms";
}

@model Rooms[]


    @if (Model.Length == 0)
    {
        <p>No Content</p>
    }
    else
    {
        <table id="output" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>ShortName</th>
                    <th>Visible</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr id="row-@row.Id">
                        <td>@row.Name</td>
                        <td>@row.ShortName</td>
                        <td>
                            <button type="button" onclick="updateItem({Id: @row.Id, Visible: '@row.Visible' === 'False'})">@(row.Visible ? "Hide" : "Show")</button>
                        </td>
                        <td>@row.Timestamp</td>
                        <td>
                            <button type="button" onclick="deleteItem(@row.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }